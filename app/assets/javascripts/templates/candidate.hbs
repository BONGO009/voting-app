<div class="candidate">
  <div class="candidate__info">
    <article class="tile -alternate">
      <div class="wrapper">
        <div class="tile__meta">
          <h1 class="__title">{{ name }}</h1>
        </div>
        <img alt="{{ name }}" src="{{ image }}" />
      </div>
    </article>

    <p class="candidate__description">{{ description }}</p>
  </div>

  <div class="candidate__actions">
    Do things to this.
  </div>
</div>
